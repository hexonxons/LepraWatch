<?xml version="1.0" encoding="utf-8"?>
<com.hexonxons.leprawatch.view.CommentElementView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@drawable/comment_element_background" >

    <LinearLayout
        android:id="@+id/comment_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:orientation="vertical" >

    </LinearLayout>
    
    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/comment_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/comment_message"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/lepra_gray"
        android:gravity="center"
        android:minWidth="32dp"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        app:typeface="roboto_bold" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/comment_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/comment_rating"
        android:layout_alignBottom="@+id/comment_rating"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/comment_rating"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/text_secondary"
        android:textSize="10sp"
        app:typeface="roboto_regular" />
    
</com.hexonxons.leprawatch.view.CommentElementView>