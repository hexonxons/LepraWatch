<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/user_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp" >
        
        <ImageView
            android:id="@+id/user_image"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
        
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/user_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/user_image"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            app:typeface="roboto_regular" />
        
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/user_registration_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/user_login"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="8dp"
            android:textColor="#FF8A8A8A"
            android:textSize="14sp"
            app:typeface="roboto_regular" />
        
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/user_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/user_registration_date"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="8dp"
            android:textColor="#FF8A8A8A"
            android:textSize="14sp"
            app:typeface="roboto_regular" />
    
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/user_karma"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_below="@+id/user_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_karma"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_secondary"
            android:textSize="30sp"
            app:typeface="roboto_bold" />
    
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/user_button_minus"
            style="@style/Button.LepraWatch.Green.Empty"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/user_karma"
            android:layout_alignBottom="@+id/user_karma"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@+id/user_karma"
            android:layout_toStartOf="@+id/user_karma"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/minus"
            app:typeface="roboto_regular" />
    
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/user_button_plus"
            style="@style/Button.LepraWatch.Green"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/user_karma"
            android:layout_alignBottom="@+id/user_karma"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@+id/user_karma"
            android:layout_toRightOf="@+id/user_karma"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/plus"
            app:typeface="roboto_regular" />
    
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/user_karma"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textSize="18sp"
            app:typeface="roboto_medium" />
    
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/user_residence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/user_name"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textColor="#FF8A8A8A"
            android:textSize="14sp"
            app:typeface="roboto_medium" />
    
        <View
            android:id="@+id/user_divider_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/user_residence"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/text_secondary" />
    
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/user_about_total_written"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_divider_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            app:typeface="roboto_regular" />
    
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/user_about_total_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_about_total_written"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            app:typeface="roboto_regular" />
    
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/user_about_total_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_about_total_rating"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            app:typeface="roboto_regular" />

        <LinearLayout
            android:id="@+id/user_contacts_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/user_about_total_votes"
            android:orientation="vertical" >

        </LinearLayout>
    
    </RelativeLayout>
</ScrollView>
