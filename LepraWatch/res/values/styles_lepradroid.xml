<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.LepraWatch" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.LepraWatch</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.LepraWatch</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.LepraWatch</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.LepraWatch</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.LepraWatch</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.LepraWatch</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_cancel</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.LepraWatch.Widget</item>
        
        <item name="android:editTextStyle">@style/EditText.LepraWatch</item>
        
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_handle</item>
        
        <item name="vpiTabPageIndicatorStyle">@style/TabPageIndicator.LepraWatch</item>
    </style>
    
    <style name="TabPageIndicator.LepraWatch" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/tab_indicator_ab</item>
        <item name="android:textColor">@color/tab_indicator_ab_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:divider">@drawable/tab_indicator_divider</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>
    
    <style name="EditText.LepraWatch" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>
    
    <style name="Button.LepraWatch.Green" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_green</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="Button.LepraWatch.Green.Empty" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_green_empty</item>
        <item name="android:textColor">@color/green_500</item>
    </style>

    <style name="ActionBar.Solid.LepraWatch" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid</item>
        <item name="android:backgroundSplit">@drawable/ab_solid</item>
        <item name="android:progressBarStyle">@style/ProgressBar.LepraWatch</item>
    </style>

    <style name="ActionBar.Transparent.LepraWatch" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent</item>
        <item name="android:progressBarStyle">@style/ProgressBar.LepraWatch</item>
    </style>

    <style name="PopupMenu.LepraWatch" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
    </style>

    <style name="DropDownListView.LepraWatch" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background</item>
    </style>

    <style name="ActionBarTabStyle.LepraWatch" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab</item>
    </style>

    <style name="DropDownNav.LepraWatch" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
        <item name="android:dropDownSelector">@drawable/selectable_background</item>
    </style>
    
    <style name="ProgressBar.LepraWatch" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>
    
    <style name="ActionButton.CloseMode.LepraWatch" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_cancel</item>
    </style>
    
    <style name="Theme.LepraWatch.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.LepraWatch</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.LepraWatch</item>
    </style>

</resources>
